{
  "$schema": "https://codesandbox.io/schemas/tasks.json",

  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "cd packages/codesandbox && npm ci"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "start": {
      "name": "start",
      "command": "cd packages/codesandbox && npm run start",
      "runAtStart": true,
      "preview": {
        "port": 5173
      }
    },
    "build": {
      "name": "build",
      "command": "cd packages/codesandbox && npm run build",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "cd packages/codesandbox && npm run lint",
      "runAtStart": false
    },
    "format": {
      "name": "format",
      "command": "cd packages/codesandbox && npm run format",
      "runAtStart": false
    },
    "check-format": {
      "name": "check-format",
      "command": "cd packages/codesandbox && npm run check-format",
      "runAtStart": false
    }
  }
}
